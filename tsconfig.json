{
  "compilerOptions": {
    
   
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "target": "es5",                               
    "module": "commonjs",                                                               
    "moduleResolution": "node16",                   
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                               
  },
  "include": ["src"]
}
